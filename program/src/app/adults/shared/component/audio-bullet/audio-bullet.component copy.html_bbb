<div class="right_col" #screen [ngClass]="bg" role="main">				
  <!-- Class -->  
  <div class="cw100p dabsolute_01">
    <div class="row center_flex">
      <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel xpanel_01">
          <div class="x_content tcenter">
            <form class="">

              <h1 class="txt1 tcenter">
                {{title}}
              </h1>             

              

              <!-- angular audio player plugin  -->                
              <!-- <ngx-circular-player></ngx-circular-player>   -->
              <div class="row tcenter">
                <div class="col-md-12 col-sm-12 col-xs-12 p7rem">
                  <ngx-circular-player id="aud1" [strokeColor]="yellow" [source]="audioLink" (click)="getTime()" #audio ></ngx-circular-player>                  
                </div>
              </div>
              <!-- /angular audio player plugin -->     

              <h3 *ngFor="let l of list;let i = index"class="txt8 oneliner_txt_pointer">
                  {{i+1}}. {{l}}
              </h3>
          
              
            </form>            
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--/Class --> 
</div>
<!-- /page content -->