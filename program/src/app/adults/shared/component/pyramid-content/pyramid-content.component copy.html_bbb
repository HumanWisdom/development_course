<!-- page content -->
<div class="right_col" #screen [ngClass]="bg" role="main">				
  <!-- Class -->  
  <div class="cw100p dabsolute_01">
    <div class="row center_flex">
      <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 p0 h100p">
        <div class="x_panel xpanel_01 p0">
          <div class="x_content tcenter p0">
            <form class="p0">

              <h1 class="txt1 tcenter">
                {{title}}
              </h1>             

              <!-- jquery audio player plugin  -->
              <!-- <div class="row tcenter">
                <div class="col-md-12 col-sm-12 col-xs-12">
                  <div #playerContainer id="playerContainer" class=""></div>
                </div>
              </div> -->
              <!-- /jquery audio player plugin -->

              <!-- angular audio player plugin  -->                
              <!-- <ngx-circular-player></ngx-circular-player>   -->
